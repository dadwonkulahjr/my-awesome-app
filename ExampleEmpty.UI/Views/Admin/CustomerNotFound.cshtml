@model int

@{ 
    ViewData["Title"] = "Customer not found";
}

<div class="row px-2 mx-2 backgroundWhite border shadow" style="margin-top:30px;">
  <div class="alert alert-danger col-12">
      <h3 class="display-4 text-white">
          404 Error!!
      </h3>
      <hr />

      <h3 class="text-white">
          The customer with the specified Id = @Model.ToString() cannot be found!
      </h3>
  </div>
  <div class="row">
      <div class="col-12">
          <a asp-controller="Admin" asp-action="Index" class="btn btn-success">
              Click the link to view the list of customers!
          </a>
      </div>
  </div>
</div>

