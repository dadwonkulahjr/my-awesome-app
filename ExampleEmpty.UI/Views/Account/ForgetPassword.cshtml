@model ForgetPasswordViewModel
@{ 
    ViewData["Title"] = "Confirm email";
}

<div class="border backgroundWhite container shadow" style="margin-top:30px;">
    <h3 class="text-success"><i class="fas fa-envelope"></i>&nbsp;Confirm Email</h3>
    <hr />
    <div class="container">
        <div class="row justify-content-center align-content-center">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="EmailAddress" class="col-form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="EmailAddress" class="form-control" placeholder="Enter your email address..." />
                            <span class="text-danger" asp-validation-for="EmailAddress"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-unlock"></i>&nbsp;Submit</button>
                            <a asp-action="index" asp-controller="admin" class="btn btn-secondary">
                            <i class="fa fa-arrow-alt-circle-left"></i>&nbsp;Cancel</a>
                        </div>
                    </div>
                </form>


            </div>



        </div>


    </div>

</div>
    
@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}