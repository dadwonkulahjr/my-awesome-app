@model AddPasswordViewModel
@{
    ViewData["Title"] = "Add new password";
}
<div class="border backgroundWhite container shadow" style="margin-top:30px;">
    <h2 class="text-success"><i class="fas fa-key"></i>&nbsp;Add Password</h2>
    <div class="text-info">
        <p>
            You have used an external account to login and do
            not have a local username/password.
            Simple set a new password if you want to login
            using a local account. Use your email as your username.
        </p>
    </div>
    <hr />
    <div class="row justify-content-center align-content-center">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <form method="post">
                <div class="form-group row">
                    <label asp-for="NewPassword" class="col-form-label col-sm-2"></label>
                    <div class="col-sm-12">
                        <input asp-for="NewPassword" class="form-control" placeholder="Enter new password here..." />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ConfirmPassword" class="col-form-label col-sm-2"></label>
                    <div class="col-sm-12">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter confirm password here..." />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                <div class="col-sm-12">
                    <button class="btn btn-primary">
                        <i class="fa fa-pencil-alt"></i>&nbsp;Submit
                    </button>
                    <a class="btn btn-secondary" asp-action="index" asp-controller="admin">
                        <i class="fa fa-arrow-alt-circle-left"></i>&nbsp;Cancel
                    </a>

                </div>

            </form>


        </div>


    </div>
</div>

@section Scripts
        {
    <partial name="_ValidationScriptsPartial" />
}


<hr />

