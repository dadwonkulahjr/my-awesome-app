@{
    ViewData["Title"] = "Logout";
}
<div class="border backgroundWhite container shadow" style="margin-top:30px;">
    <h3 class="text-success"><i class="fas fa-sign-out-alt"></i>&nbsp;Log out</h3>
    <hr />
    <div class="container mt-3">
        <form method="post">
            <div class="row justify-content-center align-items-center">
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <p>
                        Are you sure you want to logout?
                    </p>
                    <p>
                        <button class="mt-2 btn-primary" asp-action="logout" asp-controller="account" type="submit">Yes</button>
                        <a class="mt-2 btn-success" asp-action="index" asp-controller="admin">No</a>
                    </p>
                </div>
            </div>
        </form>
    </div>

</div>
