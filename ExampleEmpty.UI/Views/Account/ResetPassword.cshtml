@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
<div class="border backgroundWhite container shadow" style="margin-top:30px;">
    <h3 class="text-success"><i class="fas fa-key"></i>&nbsp;Reset Password</h3>
    <hr />
    <div class="container">
        <div class="row justify-content-center align-content-center">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <input asp-for="Token" hidden="hidden" />
                    <input asp-for="Email" hidden="hidden" />
                    <div class="form-group row">
                        <label asp-for="NewPassword" class="col-form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="NewPassword" class="form-control" placeholder="Enter new password..." />
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ConfirmPassword" class="col-form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter confirm password..." />
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Submit</button>
                            <a asp-action="index" asp-controller="admin" class="btn btn-secondary">
                                <i class="fa fa-arrow-alt-circle-left"></i>&nbsp;Cancel
                            </a>

                        </div>

                    </div>

                </form>



            </div>


        </div>


    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial"/>
}