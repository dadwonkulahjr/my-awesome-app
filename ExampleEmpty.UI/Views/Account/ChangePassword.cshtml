@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<div class="border backgroundWhite container shadow" style="margin-top:30px;">
    <h2 class="text-success"><i class="fas fa-key"></i>&nbsp;Change Password</h2>
    <hr />
    <div class="container">
        <div class="row align-content-center justify-content-center">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group row">
                        <label asp-for="NewPassword" class="col-form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="NewPassword" class="form-control" placeholder="Enter new password here..." />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="CurrentPassword" class="col-form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Enter current password here..." />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <label asp-for="ConfirmPassword" class="col-form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter confirm password here..." />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                <i class="fa fa-pencil-alt"></i>&nbsp;Update
                            </button>
                            <a class="btn btn-success" asp-action="index" asp-controller="admin">
                                <i class="fa fa-arrow-alt-circle-left"></i>&nbsp;Cancel
                            </a>
                        </div>

                    </div>

                </form>



            </div>


        </div>


    </div>


</div>

@section Scripts
{
   <partial name="_ValidationScriptsPartial"/>
}