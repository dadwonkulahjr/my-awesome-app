@model List<ApplicationUser>
@{
    ViewData["Title"] = "All Register Users";
}


<style>
    th, td {
        text-align: center;
    }
</style>

<div class="border backgroundWhite container shadow" style="margin-top:30px;">
    <h3 class="text-success"><i class="fas fa-users"></i>&nbsp;@ViewData["AllUsers"]</h3>
    <div class="text-right">
        <a asp-action="register" asp-controller="account" class="btn btn-success"><i class="far fa-plus-square"></i>&nbsp;&nbsp;Register new user record</a>
    </div>
    <hr />
    @if (Model.Any())
    {


        <form method="post" asp-controller="superadmin" asp-action="editappuser">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Fullname</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                        <tr>
                            <td>
                                @Model[i].FirstName
                            </td>
                            <td>
                                @Model[i].LastName
                            </td>
                            <td>
                                @(Model[i].FirstName + ", " + Model[i].LastName)
                            </td>
                            <td>
                                @Model[i].Gender
                            </td>
                            <td>
                                @Model[i].Address
                            </td>
                            <td>
                                @Model[i].UserName
                            </td>
                            <td>
                                @Model[i].Email
                            </td>
                            <td>
                                <div class="row ml-1">
                                    <a class="btn btn-success text-white"
                                       style="cursor:pointer;width:100px;" asp-action="editappuser"
                                       asp-route-id="@Model[i].Id">
                                        <i class="far fa-edit"></i>Edit
                                    </a>
                                    <button onclick="return confirm('Are you sure you want to delete this user? @Model[i].UserName')" class="btn btn-danger text-white" asp-action="removeuser"
                                            style="cursor:pointer;width:100px;" type="submit"
                                           href="#" asp-route-userId="@Model[i].Id">
                                        <i class="far fa-trash-alt"></i>Delete
                                    </button>
                                </div>


                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </form>

    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Gender</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <p>No record yet to be display!</p>
                        </td>
                        <td>
                            <p>No record yet to be display!</p>
                        </td>
                        <td>
                            <p>No record yet to be display!</p>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>

